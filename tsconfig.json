{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "experimentalDecorators": true,
      "typeRoots": ["node_modules/@types", "./src/types"],
      "baseUrl": "./",
      "paths": {
            "@*": ["src*"],
            "@src*": ["src*"],
            "@api*": ["src/api*"],
            "@assets*": ["src/assets*"],
            "@enums*": ["src/enums*"],
            "@helpers*": ["src/helpers*"],
            "@hooks*": ["src/hooks*"],
            "@interfaces*": ["src/interfaces*"],
            "@models*": ["src/models*"],
            "@navigation*": ["src/navigation*"],
            "@pages*": ["src/pages*"],
            "@services*": ["src/services*"],
            "@sharedComponents*": ["src/sharedComponents*"],
            "@storage*": ["src/storage*"],
            "@types*": ["src/types*"],
            "@utils*": ["src/utils*"],
            "@translations*": ["I18n*"],
        },
      "types": [ "node", "jest" ],
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }